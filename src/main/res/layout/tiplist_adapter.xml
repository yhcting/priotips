<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/prio"
        android:layout_width="@dimen/list_row_height"
        android:layout_height="@dimen/list_row_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/dropdown_arrow"
        android:scaleType="fitCenter"
        android:clickable="true"/>
    <ImageView
        android:id="@+id/option"
        android:layout_width="@dimen/list_row_height"
        android:layout_height="@dimen/list_row_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/moreoverflow"
        android:scaleType="fitCenter"
        android:clickable="true"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_row_height"
        android:layout_toRightOf="@id/prio"
        android:layout_toLeftOf="@id/option"
        android:paddingTop="@dimen/list_row_top_padding"
        android:paddingLeft="@dimen/list_row_left_padding"
        android:textSize="@dimen/list_row_text_size"
        android:ellipsize="end"
        android:clickable="true"/>
    <TextView
        android:id="@+id/text_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/prio"
        android:layout_toLeftOf="@id/option"
        android:paddingTop="@dimen/list_row_top_padding"
        android:paddingLeft="@dimen/list_row_left_padding"
        android:textSize="@dimen/list_row_text_size"
        android:clickable="true"
        android:visibility="gone"/>
</RelativeLayout>